---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projets = await getCollection('projets');
  return projets.map((projet) => ({
    params: { slug: projet.slug },
    props: { projet },
  }));
}

const { projet } = Astro.props;
const { Content } = await projet.render();

const dateFormatted = new Intl.DateTimeFormat('fr-FR', {
  year: 'numeric',
  month: 'long',
}).format(projet.data.date);
---

<Layout 
  title={`${projet.data.title} - Baptiste Dulieux`}
  description={projet.data.description}
>
  <article class="pt-32 pb-20 px-4">
    <div class="container mx-auto max-w-4xl">
      <!-- Retour -->
      <a 
        href="/projets" 
        class="inline-flex items-center text-primary-600 hover:text-primary-700 mb-8 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour aux projets
      </a>

      <!-- En-tête -->
      <header class="mb-12">
      
        
        <h1 class="text-5xl font-bold text-gray-900 mb-4">
          {projet.data.title}
        </h1>
        
        <p class="text-xl text-gray-600 mb-6">
          {projet.data.description}
        </p>

        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
          <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {dateFormatted}
          </span>
        </div>
      </header>

      <!-- Image principale -->
      {projet.data.image && (
        <div class="mb-12 rounded-lg overflow-hidden shadow-xl">
          <img 
            src={projet.data.image}
            alt={projet.data.title}
            class="w-full h-auto"
          />
        </div>
      )}

      <!-- Technologies -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Technologies utilisées</h2>
        <div class="flex flex-wrap gap-3">
          {projet.data.technologies.map((tech) => (
            <span class="px-4 py-2 bg-primary-50 text-primary-700 rounded-lg text-base font-medium">
              {tech}
            </span>
          ))}
        </div>
      </div>

      <!-- Liens du projet -->
      {(projet.data.githubUrl || projet.data.liveUrl) && (
        <div class="mb-12 flex flex-wrap gap-4">
          {projet.data.githubUrl && (
            <a 
              href={projet.data.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-gray-900 text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition font-medium"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              Voir le code source
            </a>
          )}
          
          {projet.data.liveUrl && (
            <a 
              href={projet.data.liveUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition font-medium"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Voir le projet en ligne
            </a>
          )}
        </div>
      )}

      <!-- Contenu du projet (Markdown) -->
      <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-a:text-primary-600 prose-strong:text-gray-900">
        <Content />
      </div>

      <!-- Navigation entre projets -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <a 
            href="/projets" 
            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Tous les projets
          </a>
          
          <a 
            href="/contact" 
            class="bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition font-medium"
          >
            Me contacter
          </a>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Styles personnalisés pour le contenu Markdown */
  :global(.prose h2) {
    @apply text-3xl font-bold mt-12 mb-6;
  }
  
  :global(.prose h3) {
    @apply text-2xl font-semibold mt-8 mb-4;
  }
  
  :global(.prose p) {
    @apply mb-4 leading-relaxed;
  }
  
  :global(.prose ul) {
    @apply mb-6;
  }
  
  :global(.prose li) {
    @apply mb-2;
  }
  
  :global(.prose code) {
    @apply bg-gray-100 px-2 py-1 rounded text-sm;
  }
  
  :global(.prose pre) {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto;
  }
  
  :global(.prose table) {
    @apply w-full border-collapse mb-6;
  }
  
  :global(.prose th) {
    @apply bg-primary-50 p-3 text-left font-semibold border-b-2 border-primary-200;
  }
  
  :global(.prose td) {
    @apply p-3 border-b border-gray-200;
  }
</style>