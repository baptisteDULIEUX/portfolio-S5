---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projets = await getCollection('projets');
const projetsTries = projets.sort((a, b) => a.data.ordre - b.data.ordre);
---

<Layout 
  title="Mes Projets - Baptiste Dulieux" 
  description="Découvrez mes réalisations en développement web : projets personnels, académiques et professionnels"
>
  <section class="pt-32 pb-20 px-4">
    <div class="container mx-auto max-w-6xl">
      <!-- En-tête -->
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">
          Mes Projets
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Découvrez une sélection de mes réalisations en développement web, 
          allant de projets personnels à des projets académiques et professionnels.
        </p>
      </div>

      <!-- Grille de projets -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projetsTries.map((projet) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
            {/* Image du projet */}
            {projet.data.image ? (
              <div class="h-48 bg-gradient-to-br from-primary-400 to-primary-600 relative">
                <img 
                  src={projet.data.image} 
                  alt={projet.data.title}
                  class="w-full h-full object-cover"
                />
                
              </div>
            ) : (
              <div class="h-48 bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
                <svg class="w-20 h-20 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
            )}

            {/* Contenu */}
            <div class="p-6 flex flex-col flex-grow">
              <h2 class="text-2xl font-bold text-gray-900 mb-3">
                {projet.data.title}
              </h2>
              
              <p class="text-gray-600 mb-4 flex-grow">
                {projet.data.description}
              </p>

              {/* Technologies */}
              <div class="flex flex-wrap gap-2 mb-4">
                {projet.data.technologies.slice(0, 4).map((tech) => (
                  <span class="px-3 py-1 bg-primary-50 text-primary-700 rounded-full text-sm font-medium">
                    {tech}
                  </span>
                ))}
                {projet.data.technologies.length > 4 && (
                  <span class="px-3 py-1 bg-gray-100 text-gray-600 rounded-full text-sm font-medium">
                    +{projet.data.technologies.length - 4}
                  </span>
                )}
              </div>

              {/* Liens */}
              <div class="flex gap-3 mt-auto">
                <a 
                  href={`/projets/${projet.slug}`}
                  class="flex-1 bg-primary-600 text-white text-center px-4 py-2 rounded-lg hover:bg-primary-700 transition font-medium"
                >
                  Voir détails
                </a>
                {projet.data.githubUrl && (
                  <a 
                    href={projet.data.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-900 transition"
                    aria-label="Voir sur GitHub"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                )}
                {projet.data.liveUrl && (
                  <a 
                    href={projet.data.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-primary-100 text-primary-700 px-4 py-2 rounded-lg hover:bg-primary-200 transition"
                    aria-label="Voir le projet en ligne"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>

      {/* Message si aucun projet */}
      {projetsTries.length === 0 && (
        <div class="text-center py-20">
          <p class="text-xl text-gray-600">
            Aucun projet pour le moment. Revenez bientôt !
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>